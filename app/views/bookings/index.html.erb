    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application", data: { turbo_track: "reload" } %>
    <%= csrf_meta_tags %>

<%= form_tag(bookings_path, method: :get) do %>
<%= text_field_tag :search, params[:search]%>
<%= submit_tag "Rechercher", name: nil, class:  "btn btn-primary" %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr class="medium-4 columns" >
      <th scope="col">ID</th>
      <th scope="col">Date de debut</th>
      <th scope="col">Date de fin</th>
      <th scope="col">Voir </th>
      <th scope="col">Editer</th>
      <th scope="col">Supprimer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
    <tr>
      <td><%= booking.id %></td>
      <td><%= booking.start_date %></td>
      <td><%= booking.end_date %></td>
      <td><%= link_to 'Voir', booking %></td>
      <td><%= link_to 'Editer', edit_booking_path(booking) %></td>
      <td><%= link_to 'Supprimer', booking, method: :delete, data: { confirm: 'Etes-vous sur ?'} %></td>
    </tr>
    <% end %>
   
  </tbody>
 </table>
  
<%= link_to 'Nouvelle reservation', new_booking_path %>
