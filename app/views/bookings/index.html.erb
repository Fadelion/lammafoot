    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application", data: { turbo_track: "reload" } %>
    <%= csrf_meta_tags %>

<%= form_tag(bookings_path, method: :get) do %>
<%= text_field_tag :search, params[:search]%>
<%= submit_tag "Rechercher", name: nil, class:  "btn btn-primary" %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr class="medium-4 columns" >
      <th scope="col">Nom complet</th>
      <th scope="col">Localisation</th>
      <th scope="col">Prix</th>
      <th scope="col">Date de debut</th>
      <th scope="col">Date de fin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
    <tr>
      <td><%= booking.id %></td>
      <td><%= booking.location %></td>
      <td><%= booking.price %></td>
      <td><%= booking.start_date %></td>
      <td><%= booking.end_date %></td>
      <td><%= link_to 'Voir', booking %></td>
      <td><%= link_to 'Editer', edit_booking_path(bookings) %></td>
      <td><%= link_to 'Supprimer', bookings, method: :delete, data: { confirm: 'Etes-vous sur ?'} %></td>
    </tr>
    <% end %>
   
  </tbody>
 </table>
  
<%= link_to 'Nouvelle reservation', new_booking_path %>
<%= link_to  'Retour',  new_booking_path %>

