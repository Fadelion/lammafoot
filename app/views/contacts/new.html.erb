 <main class="container py-5">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
      <div class="card shadow p-4 rounded-4 bg-white">
        <h2 class="text-center mb-4">Contactez-nous</h2>

        <%= form_with url: contacts_path, method: :post, html: { class: "needs-validation", novalidate: true } do |f| %>
          <div class="mb-3">
            <%= f.label :name, "Nom", class: "form-label" %>
            <%= f.text_field :name, placeholder: "Votre nom", class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, placeholder: "Votre email", class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :message, "Message", class: "form-label" %>
            <%= f.text_area :message, rows: 5, placeholder: "Votre message...", class: "form-control", required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit "Envoyer", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

<style>
.card {
  border-radius: 1rem;
  background-color: #ffffff;
}

@media (max-width: 576px) {
  h2 {
    font-size: 1.5rem;
  }

  .card {
    padding: 1.5rem;
  }

  .btn {
    font-size: 1rem;
  }
}

</style