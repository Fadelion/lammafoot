 <main>
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="w-100" style="max-width: 450px;">
      <h1 class="text-center fw-bold">LammaFoot</h1>
      <p class="text-center mb-4">Connectez-vous à votre compte</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group form-icon mb-3">
          <label for="email">Adresse email *</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fa fa-envelope"></i></span>
            <%= f.email_field :email, id: "email", class: "form-control email", required: true, autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="form-group form-icon mb-3">
          <label for="password">Mot de passe *</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, id: "password", class: "form-control email", required: true, autocomplete: "current-password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
            <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
          </div>
        <% end %>

        <div class="forgot mb-3 text-end">
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-decoration-none text-info" %>
        </div>

        <%= f.submit "Se connecter", class: "btn page-connecter w-100 mb-3" %>

        <div class="signup text-center">
          <small>Pas encore de compte ? <%= link_to "S’inscrire", new_registration_path(resource_name), class: "text-decoration-none text-info" %></small>
        </div>
      <% end %>
    </div>
  </div>
</main>

