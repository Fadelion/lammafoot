 <main>
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="w-100" style="max-width: 450px;">
      <h1 class="text-center fw-bold">LammaFoot</h1>
      <p class="text-center mb-4">Réinitialisez votre mot de passe</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group form-icon mb-4">
          <label for="email">Adresse email *</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fa fa-envelope"></i></span>
            <%= f.email_field :email, id: "email", class: "form-control email", required: true, autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <%= f.submit "Recevoir les instructions", class: "btn page-connecter w-100 mb-3" %>

        <div class="text-center">
          <small>
            <%= link_to "Retour à la connexion", new_session_path(resource_name), class: "text-decoration-none text-info" %>
          </small>
        </div>
      <% end %>
    </div>
  </div>
</main>

