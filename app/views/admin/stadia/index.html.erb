<div class="container-fluid mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestion des Stades</h1>
    <%= link_to "Nouveau stade", new_admin_stadium_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @stadia.each do |stadium| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= stadium.name %></h5>
            <p class="card-text">
              <i class="fas fa-map-marker-alt"></i> <%= stadium.location %><br>
              <i class="fas fa-euro-sign"></i> <%= number_to_currency(stadium.price, unit: '€') %>/heure<br>
              <i class="fas fa-users"></i> <%= stadium.capacity %> personnes<br>
              <i class="fas fa-calendar"></i> <%= stadium.total_bookings %> réservations
            </p>
            <div class="d-flex gap-2">
              <%= link_to "Voir", admin_stadium_path(stadium), class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Modifier", edit_admin_stadium_path(stadium), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Supprimer", admin_stadium_path(stadium), method: :delete, 
                  data: { confirm: "Êtes-vous sûr ?" }, 
                  class: "btn btn-sm btn-outline-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>